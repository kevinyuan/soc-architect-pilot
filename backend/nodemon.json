{
  "watch": [
    "src/**/*.ts",
    "data/**/*.json",
    ".env"
  ],
  "ext": "ts,json,env",
  "ignore": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "data/backups/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exec": "ts-node src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "delay": 1000,
  "verbose": true,
  "colours": true,
  "events": {
    "restart": "echo '\nðŸ”„ Server restarting due to file changes...'"
  }
}
