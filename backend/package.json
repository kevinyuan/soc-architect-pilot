{
  "name": "soc-pilot",
  "version": "1.0.0",
  "description": "AI-driven SoC design tool with conversational interface and visual diagram generation",
  "main": "src/index.ts",
  "scripts": {
    "validate-schemas": "ts-node scripts/validate-samples.ts",
    "generate-library": "ts-node scripts/generate-component-library.ts",
    "validate-library": "ts-node scripts/validate-generated-library.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:watch": "nodemon",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "start:pm2:dev": "pm2 start ecosystem.config.js --only soc-pilot-backend-dev",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "logs:pm2": "pm2 logs soc-pilot-backend",
    "setup-aws": "ts-node scripts/setup-aws-environment.ts",
    "migrate-workspaces": "ts-node scripts/migrate-workspaces-to-s3.ts",
    "migrate-s3-interfaces": "ts-node scripts/migrate-s3-interfaces.ts",
    "download-from-s3": "ts-node scripts/download-from-s3.ts",
    "test-dev": "ts-node scripts/test-development-setup.ts",
    "test-bedrock": "ts-node scripts/test-bedrock.ts",
    "test-nova": "ts-node scripts/test-nova.ts",
    "dashboard": "ts-node scripts/dev-dashboard.ts",
    "dashboard:watch": "ts-node scripts/dev-dashboard.ts --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "soc",
    "system-on-chip",
    "ai",
    "aws",
    "bedrock",
    "react-flow",
    "typescript"
  ],
  "author": "SoC Pilot Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.0.0",
    "@aws-sdk/client-bedrock-runtime": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.911.0",
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/lib-dynamodb": "^3.911.0",
    "@types/dagre": "^0.7.53",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dagre": "^0.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "nodemon": "^3.1.10",
    "pm2": "^5.3.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
